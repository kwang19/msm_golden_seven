<h1>List of Directors</h1>

<a href="http://localhost:3000/directors/new">Add a New Director</a>

<table>
  <tr>
    <th>Name</th>
    <th>Photo</th>
    <th>Bio</th>
    <th>Dob</th>
    <th colspan="3">Directors</th>
  </tr>
  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.name %>
    </td>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.bio %>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
